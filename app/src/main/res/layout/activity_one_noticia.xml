<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- A CardView that contains a TextView -->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_noticias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">


                <ImageView
                    android:id="@+id/imageNotice"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:minHeight="75dp"
                    android:minWidth="75dp" />

                <LinearLayout
                    android:id="@+id/containerTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/imageNotice">

                    <TextView
                        android:id="@+id/tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/rounded"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="11dp" />


                    <TextView
                        android:id="@+id/fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/rounded_fecha"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="11dp"
                        android:textStyle="bold|italic"
                        android:typeface="normal" />

                </LinearLayout>


                <TextView
                    android:id="@+id/titleNotice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/containerTag"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <TextView
                    android:id="@+id/bodyNotice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/titleNotice"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/pie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/bodyNotice"
                    android:layout_below="@+id/bodyNotice"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:scrollHorizontally="true"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textStyle="bold|italic" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>



</RelativeLayout>