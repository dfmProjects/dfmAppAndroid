<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:padding="5dp">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/effect_ripple"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">


            <ImageView
                android:id="@+id/img_item_list"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:layout_marginRight="8dp"
                android:src="@mipmap/ic_pdf" />

            <TextView
                android:id="@+id/main_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_item_list"
                android:layout_toEndOf="@+id/img_item_list"
                android:text="NÃ³mina Febrero,pdf"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_item_list"
                android:layout_alignStart="@+id/main_nombre"
                android:text="2018"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                android:typeface="normal" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>